{
  "name": "ng2-electron",
  "version": "0.1.0",
  "license": "MIT",
  "author": "David Vilar√≥",
  "angular-cli": {},
  "directories": {
    "output": "release",
    "app": "dist",
    "buildResources": "build"
  },
  "build": {
    "appId": "app.electron.ng2"
  },
  "scripts": {
    "electrontsc": "tsc -p electron/",
    "start": "ng serve",
    "lint": "tslint \"src/**/*.ts\"",
    "test": "ng test",
    "pree2e": "webdriver-manager update",
    "e2e": "protractor",
    "dev": "ng build",
    "build": "ng build --prod",
    "prepare:dev": "npm run dev && npm run electrontsc && ncp electron/package.json dist/package.json",
    "prepare:prod": "npm run build && npm run electrontsc && ncp electron/package.json dist/package.json",
    "prepare": "npm run prepare:dev",
    "electron:dev": "npm run prepare:dev && electron dist",
    "electron:prod": "npm run prepare:prod && electron dist",
    "electron": "npm run electron:dev",
    "package:dev": "npm run prepare:dev && electron-packager dist App --out=release --overwrite",
    "package:prod": "npm run prepare:prod && electron-packager dist App --out=release --asar=true --overwrite",
    "package": "npm run package:dev",
    "release": "npm run package:prod && build"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "~2.4.0",
    "@angular/compiler": "~2.4.0",
    "@angular/core": "~2.4.0",
    "@angular/forms": "~2.4.0",
    "@angular/http": "~2.4.0",
    "@angular/platform-browser": "~2.4.0",
    "@angular/platform-browser-dynamic": "~2.4.0",
    "@angular/router": "~3.4.0",
    "core-js": "^2.4.1",
    "rxjs": "5.0.1",
    "ts-helpers": "^1.1.1",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@angular/cli": "^1.3.1",
    "@angular/compiler-cli": "^2.1.0",
    "@types/electron": "^1.4.30",
    "@types/jasmine": "^2.2.30",
    "@types/node": "^6.0.42",
    "codelyzer": "2.0.0-beta.3",
    "electron": "^1.4.13",
    "electron-builder": "^10.9.2",
    "electron-packager": "^8.1.0",
    "electron-prebuilt": "^1.3.10",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "2.7.0",
    "karma": "1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.3.2",
    "ncp": "^2.0.0",
    "protractor": "4.0.14",
    "ts-node": "1.7.2",
    "tslint": "4.1.1",
    "typescript": "^2.0.10",
    "webdriver-manager": "10.3.0"
  }
}
